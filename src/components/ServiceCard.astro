---
interface Props {
  title: string;
  description: string;
  image: string;
  icon: string;
}

const { title, description, image, icon } = Astro.props;
---

<section class="relative h-96 group overflow-hidden rounded-lg shadow-lg transition-transform duration-300 hover:scale-105">
  <img
    src={image}
    alt={title}
    class="absolute inset-0 w-full h-full object-cover"
  />
  <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/60 to-black/30">
  
    <div class="absolute bottom-0 left-0 right-0 p-6 text-white">
      <h3 class="text-2xl font-bold mb-2">
        {title}
      </h3>
      <p class="text-gray-100 mb-4 text-pretty">
        {description}
      </p>

    </div>
  </div>
</section>